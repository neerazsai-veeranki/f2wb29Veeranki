extends layout

block content
  h1= title

  p rows : #{query.rows} and columns : #{query.cols}

  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  if !(Number.isInteger(rows) && Number.isInteger(cols))
    p Please Pass Numeric Parameters!! 
  else if rows < 1 && rows > 10 
    p Rows out of Range! 
  else if cols < 1 && cols > 10
    p Columns out of Range!
  else
    table#outer
      - for(let i=0; i<rows; i++) {
        tr#middle
        - for(let j=0; j<cols; j++) {
          td=(1+i+j*rows)
        - }
      - }
